{
  "compilerOptions": {
    
    "target": "es2016",                                  
   
    "module": "commonjs",                               
     "rootDir": "./src",                                 
   
   
     "sourceMap": true,                                
  
     "noEmit": true,                                  
   
     "outDir": "./dist",                                   
  

   
    "esModuleInterop": true,                             
   
    "forceConsistentCasingInFileNames": true,           

 
    "strict": true,                                     
     "noImplicitAny": true,      
     "strictFunctionTypes": true,                    
    "skipLibCheck": true                              
  },
  "include": ["src/**/*"]
}
